<%- include("header") %>
<div class="container mt-3">
        <div class="card">
                <div class="card-header">ขายสินค้า</div>
                <div class="card-body">
                        <form method="POST">
                                <div class="row">
                                        <div class="col-lg-6">
                                                <label for="Barcode"></label>
                                                <div class="input-group">
                                                        <input
                                                                type="text"
                                                                name="barcode"
                                                                class="form-control"
                                                                onblur="document.form[0].submit()"
                                                        />
                                                        <div
                                                                class="input-group-append"
                                                        >
                                                                <span
                                                                        class="input-group-text"
                                                                >
                                                                        <%=
                                                                        product.name
                                                                        %>
                                                                </span>
                                                        </div>
                                                </div>
                                        </div>
                                </div>
                        </form>
                </div>
        </div>
</div>
<%- include("footer") %>
